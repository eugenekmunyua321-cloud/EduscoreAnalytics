# ============================================
# AWS S3 STORAGE CONFIGURATION
# ============================================
# Enable S3 storage (set to 's3' to use AWS S3)
STORAGE_PROVIDER=s3

# ============================================
# AWS CREDENTIALS - PASTE YOUR VALUES HERE
# ============================================
# Get these from your AWS IAM Console
AWS_ACCESS_KEY_ID=PASTE_YOUR_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=PASTE_YOUR_SECRET_KEY_HERE
AWS_DEFAULT_REGION=PASTE_YOUR_REGION_HERE

# ============================================
# S3 BUCKET CONFIGURATION
# ============================================
# Your S3 bucket name (create this bucket first in AWS Console)
S3_BUCKET=PASTE_YOUR_BUCKET_NAME_HERE

# Optional: Prefix/folder path within your bucket (e.g., 'eduscore-data' or 'production')
S3_PREFIX=eduscore-data

# ============================================
# S3 STRICT MODE (Optional)
# ============================================
# Set to 'true' to disable local filesystem fallback (S3-only mode)
# Set to 'false' or remove to allow local fallback if S3 fails
STORAGE_STRICT_S3=true

